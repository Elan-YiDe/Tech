09test.sh
#!/bin/sh
if [ $# -eq 2 ] then
	echo "Not enough parameters"
	exit 0   #退出程序执行，并返回一个返回码，返回码为0表示正常退出，非0表示非正常退出
fi
if [ $1 -eq $2 ] then
	echo "$1 equals $2"
elif [$1 -lt $2 ]
	echo "$1 littler than $2"
elif [$1 -gt $2 ]
	echo "$1 greater than $2"
fi
